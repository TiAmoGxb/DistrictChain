<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_f"
    android:focusable="true"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="200px">
        <ImageView
            app:layout_auto_baseheight="width"
            android:id="@+id/txt_img"
            android:scaleType="centerCrop"
            android:layout_width="190px"
            android:layout_margin="10px"
            android:src="@drawable/bac_image"
            android:layout_height="190px" />

        <TextView
            android:id="@+id/msg"
            android:textColor="@color/text_7d"
            android:textSize="@dimen/sp_24"
            android:layout_marginTop="15px"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/txt_img"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_alignBottom="@+id/txt_img"
            android:id="@+id/nick_name"
            android:layout_marginBottom="10px"
            android:textColor="@color/text_101010"
            android:textSize="@dimen/sp_26"
            android:layout_marginTop="15px"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/txt_img"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_alignBottom="@+id/txt_img"
            android:layout_marginRight="7px"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10px"
            android:id="@+id/time"
            android:textColor="@color/text_c9"
            android:textSize="@dimen/sp_22"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <View
        android:layout_below="@+id/rela"
        android:background="@color/view_f4"
        android:layout_width="match_parent"
        android:layout_height="20px"></View>

</com.zhy.autolayout.AutoRelativeLayout>
