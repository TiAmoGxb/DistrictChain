<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_f"
    tools:context="cn.see.fragment.release.ui.ReleaseSetAct">

    <include layout="@layout/layout_base_title"
        android:id="@+id/basetitle"></include>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="80px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_below="@+id/basetitle"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_101010"
                android:textSize="@dimen/sp_28"
                android:text="发布设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="仅自己可见"
                    android:textColor="@color/text_7d"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_marginLeft="30px"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:text="直接发布"
                    android:textColor="@color/text_7d"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="80px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_101010"
                android:textSize="@dimen/sp_28"
                android:text="图片设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="添加水印"
                    android:textColor="@color/text_7d"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_marginLeft="40px"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:text="不允许下载"
                    android:textColor="@color/text_7d"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
