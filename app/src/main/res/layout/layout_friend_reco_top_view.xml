<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back_f"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/serch_rela"
        android:layout_marginTop="15px"
        android:background="@drawable/shap_but_seach_yes_bg"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_width="match_parent"
        android:layout_height="70px">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/text_7d"
            android:textSize="@dimen/sp_28"
            android:text="搜索"
            android:layout_marginLeft="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="15px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="40px"
            android:src="@mipmap/seach_img"
            android:layout_height="40px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/tj_rela"
        android:layout_width="match_parent"
        android:layout_height="100px">

        <ImageView
            android:id="@+id/tj_img"
            android:layout_marginLeft="25px"
            android:layout_centerVertical="true"
            android:src="@drawable/tj_friends"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tj_img"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/text_101010"
            android:text="好友推荐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="100px"
            android:id="@+id/close_rela"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/close"/>

        </com.zhy.autolayout.AutoRelativeLayout>



    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/top_lin"
        android:layout_marginRight="25px"
        android:layout_marginLeft="25px"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <ImageView
            android:id="@+id/img_one"
            android:layout_gravity="center_vertical"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100px" />
        <ImageView
            android:id="@+id/img_two"
            android:layout_gravity="center_vertical"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100px" />

        <ImageView
            android:id="@+id/img_three"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
          />

        <ImageView
            android:id="@+id/img_four"
            android:layout_gravity="center_vertical"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0px"
            android:layout_weight="1"
            android:id="@+id/fj_rela"
            android:layout_height="100px">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/text_7d"
                android:text="附近"
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_img"
                android:layout_width="25px"
                android:layout_height="25px" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_marginTop="15px"
        android:background="@color/text_c9"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

    <View
        android:background="@color/view_f4"
        android:layout_width="match_parent"
        android:layout_height="15px"></View>
    <View
        android:background="@color/text_c9"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

</com.zhy.autolayout.AutoLinearLayout>
